{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": [
      "es2020",
      "esnext",
      "DOM"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {}
  },
  "lib": ["es2020"],
  "resolveJsonModule": true,
  "include": ["src/**/*", "socket", "custom.d.ts", "test"],
  "exclude": ["node_modules","**/*.spec.ts"]
}